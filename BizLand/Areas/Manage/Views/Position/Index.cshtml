@model List<Position>
@{
    int counter = 0;
}

<div class="container">
    <h1>Positions</h1>
    <a asp-action="create" asp-controller="position" class="btn btn-primary">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                <th scope="row">@counter</th>
                <td>@item.Name</td>
                <td>
                    <a asp-action="edit" asp-controller="position" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="delete" asp-controller="position" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>